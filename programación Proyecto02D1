void writeAngleToRegister (int address, byte valor) {
  while (EECR & (1 << EEPE));
  EECR = (0 << EEPM1 | (0EEPM0); 
  EEAR = address;
  EEDR = valor;
  EECR |= (1<< EEMPE);
  EECR |= (1<<EEPE);
  }
 byt readAngleFromRegister (int address) {
  while (EECR & (1 << EEPE));
  EEAR = address;
  EECR |= (1<<EERE);
  return EEDR;
 }
 int angle0 = 0;
 int angle1 = 0;
 int angle2 = 0;
 int angle3 = 0;
 
